<script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.1/moment.min.js'></script>

<script src="~/fullcalendar-3.1.0/fullcalendar-3.1.0/fullcalendar.js"></script>

<script src="~/fullcalendar-3.1.0/fullcalendar-3.1.0/locale/ru.js"></script>

<style>
    #calendar
    {
        width: 1000px;
        margin: 0 auto;
    }

    .fc-toolbar
    {
        visibility: hidden !important;
    }
   
    table
    {
        color: lightgrey;
    }

    td
    {
        border: 2px solid #ecedf8 !important;
    }

    tr
    {
        height: 50px !important;
    }

    .fc-row.fc-week.ui-widget-content
    {
        display: none;
    }


    #date-scroller {
    display: inline-block;
    width: 1000px;
    position: relative;
    left: 170px;
    text-align: center;
    margin-bottom: 10px;

    margin-top: 20px;
}

.fa-caret-left, .fa-caret-right {
    opacity: 0.4;
    transition: all .2s ease-in-out;
}

    .fa-caret-left:hover, .fa-caret-right:hover {
        opacity: 0.9;
    }

    .fa-caret-left:active, .fa-caret-right:active {
        opacity: 1;
        transform: scale(1.9);
    }

.fa-caret-left {
    float: left;
}

.fa-caret-right {
    float: right;
}

.fc-bg {
    background-color: transparent;
}

.fc-time-grid-event
{
    border: none;
}
</style>

<div id="week-calendar-wrapper">
    <div id="date-scroller">
        <i class="fa fa-caret-left fa-2x" aria-hidden="true"></i>

        <span id="date-scroller-value">Декабрь, 2016</span>

        <i class="fa fa-caret-right fa-2x" aria-hidden="true"></i>
    </div>

    <div id='calendar'>

    </div>
</div>

<script>

    $(document).ready(function () {
        // page is ready
        $('#calendar').fullCalendar({
            // enable theme
            theme: false,
            // emphasizes business hours
            businessHours: false,
            // event dragging & resizing
            editable: false,
            // header
            header: {
                left: 'prev',
                center: 'title',
                right: 'next'
            },

            events: [
                {
                    title: 'C# multithreading',
                    start: '2016-12-17T05:30:00',
                    end: '2016-12-17T07:30:00'
                },
                {
                    title: 'ASP.NET routing',
                    start: '2016-12-17T10:30:00',
                    end: '2016-12-17T12:30:00'
                },
                {
                    title: 'QA intro',
                    start: '2016-12-17T17:30:00',
                    allDay: false // will make the time show
                }
            ],

            color: 'black',     // an option!
            textColor: 'yellow', // an option!
            displayEventEnd: true,
            timeFormat: 'H(:mm)',
            allDaySlot: false,
            slotLabelFormat: 'H:mm',
            firstDay: 2,
            eventColor: '#FF0909',
            weekends: true,

            slotDuration: '01:00:00',
            nowIndicator: true,
            columnFormat: "ddd     D.M"

        }).fullCalendar('changeView', 'agendaWeek')
    });


</script>


