@using WebApplication1.HtmlHelpers
@model System.Int32


@{
    MenuItemInfo item;
    if (!Request.IsAuthenticated)
    {

        item = new MenuItemInfo() { ItemName = "Вход", ActionRoute = Url.Action("Login", "Account") };
    }
    else
    {
        string s;
        if(Session["UserName"] != null)
        {
            s = (string)Session["UserName"];
        }
        else
        {
            s = "Пользователь";
        }

        item = new MenuItemInfo() { ItemName = s, ActionRoute = Url.Action("UserPage", "Account") };
    }

    var menuItems = new MenuItemInfo[]{
                item,
                new MenuItemInfo() { ItemName ="Обратная связь", ActionRoute= Url.Action("SendMessageForm","Feedback") },
                new MenuItemInfo() { ItemName ="Расписание", ActionRoute = Url.Action("ShowSchedule","Schedule") } };
}
@Html.CreateMenuItems(menuItems, Model)