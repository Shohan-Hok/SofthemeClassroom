<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="body-content">
        <nav>
            <img class="logo" src="@Url.Action("GetImage","Resource", new { imageName = "logo.png"})" alt="logo" />
            <ul class="menu-items">
                <li class="menu-item"><a class="active-item" href="@Url.Action("LogIn","Account")">Вход</a></li>
                <li class="menu-item"><a href="@Url.Action("SendMessage","Feedback")">Обратная связь</a></li>
                <li class="menu-item"><a href="@Url.Action("ShowShedule", "Shedule")">Рассписание</a></li>
            </ul>
        </nav>

        @RenderBody()

        <footer>
            <div class="footer-logo">
                <img  src="@Url.Action("GetImage", "Resource", new { imageName = "logo-gray.png"})" alt="logo" />
            </div>
            
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
