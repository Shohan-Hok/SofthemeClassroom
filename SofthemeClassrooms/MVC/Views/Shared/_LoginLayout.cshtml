<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/Content/inputs.css" rel="stylesheet" />
</head>
<body style="background-color: #f4f6fb; min-width: 760px">
    
    <link href="~/Content/login.css" rel="stylesheet" />



    <div class="login-menu">
        <ul class="menu-list">
            <li><img class="menu-logo" src="@Url.Action("GetImage", "Resources", new { imageName="logo-gray.png" })" /></li>
            <li><a href="@Url.Action("Login","Account")">Вход</a></li>
            <li><a href="@Url.Action("Register","Account")">Регистрация</a></li>
            <li><a href="@Url.Action("ForgotPassword","Account")">Сменить пароль</a></li>
        </ul>
    </div>

    <div class="input-wrapper">
        <div class="input-header"><div id="header-content"><h2 id="title">@RenderSection("header", false)</h2></div></div>
        <div id="inputForm" class="input-area">
            @RenderBody()
        </div>
    </div>


    @Scripts.Render("~/scripts/jquery-1.10.2.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
</body>
</html>
