    {
        @Html.AntiForgeryToken()
        <input id="logout" class="userPagebuttton" type="submit" value="Выход" />
    }
</div>

<div class="container">
    <div class="col-lg-3">
        <div id="pInfo">
            @Html.Partial("PersonalInfoPView")
